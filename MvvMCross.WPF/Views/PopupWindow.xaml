<views:MvxWindow x:Class="MvvMCross.WPF.Views.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvvMCross.WPF.Views"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
        Title="PopupWindow" Height="300" Width="300">
    <Grid>
        <Button Content="Close Popup" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Command="{Binding ClosePopupCommand}"/>

    </Grid>
</views:MvxWindow>
